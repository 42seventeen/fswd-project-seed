extends ../layout.jade

block body
  include ../_includes/prettyDate.jade
  h1= title
    small.pull-right
      a(href="/channels/update/" + channel.id, class='btn btn-primary')
        span.glyphicon.glyphicon-edit
        | &emsp;Edit Channel
      | &emsp;
      a(href=channel.url, target="_blank" class='btn btn-primary')
        span.glyphicon.glyphicon-new-window
        | &emsp;View Channel Webpage

  p
    strong Notes:
    |  #{channel.note}

  hr

  h4 Webcasts Scheduled for this Channel
  ul
    each webcast in webcasts
      li
        a(href="/webcast/detail/" + webcast.id)
          strong= webcast.title
        |  | #{prettyDate(webcast.webcastDate)}

  hr
  .col-sm-6.col-xs-12
    h3 Channel Preview
    #Container(style='padding-bottom:56.25%; position:relative; display:block; width: 100%')
      iframe#UstreamIframe(width='100%', height='100%', src='http://www.ustream.tv/embed/#{channel.serviceID}?html5ui', frameborder='0', style='position:absolute; top:0; left: 0')


  .col-sm-6.col-xs-12
    h3 Embed Code
    pre
      | &lt;div id=&quot;Container&quot;
      |    style=&quot;
      |     padding-bottom:56.25%;
      |     position:relative;
      |     display:block;
      |     width: 100%&quot;&gt;
      |   &lt;iframe
      |     id=&quot;UstreamIframe&quot;
      |     width=&quot;100%&quot; height=&quot;100%&quot;
      |     src=&quot;http://www.ustream.tv/embed/#{channel.serviceID}?html5ui&quot;
      |     frameborder=&quot;0&quot;
      |     style=&quot;position:absolute; top:0; left: 0&quot;&gt;
      |   &lt;/iframe&gt;
      | &lt;/div&gt;
