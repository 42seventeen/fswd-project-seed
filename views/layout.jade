html
  head
    include ./includes/bootstrap.jade
    script(src="/jspm_packages/system.js")
    script(src="/config.js")
    script System.import('app-angular');
    style
      | body { padding-top: 70px; }
    title #{title} | WebCast Management

  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href="/"): strong Dashboard
        .collapse.navbar-collapse.navbar-right
          ul.nav.navbar-nav
            li.nav.navbar-nav
              a(href='/webcast/') Webcasts
            li.nav.navbar-nav
              a(href='/users/') Users
            li.nav.navbar-nav
              a(href='/channels/') Channels

    .container
      block body

  .container
    br
    .well.well-sm
      if !isAuthenticated()
        ul.nav
          li
            a(href='/users/login') Sign In
          li
            a(href='/users/register') Register

      else
        p(style="text-align: right")
          a(href='/users/logout') Logout
          |  | Hello #{user.username}.
